<!DOCTYPE html>
<html>
<head>
  <title>Achieveit</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if flash[:notice] %>
  <p class="notice"><%= flash[:notice] %></p>
<% end %>

<% if flash[:error] %>
  <p class="error"><%= flash[:notice] %></p>
<% end %>  

<% if user_signed_in? %>
  <%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
<% else %>
  <%= link_to "Sign in as user with Facebook", user_omniauth_authorize_path(:facebook) %>
<% end %>

<%= yield %>

</body>
</html>
